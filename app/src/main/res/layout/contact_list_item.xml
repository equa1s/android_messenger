<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="@dimen/contact_item_height"
    android:background="@drawable/contact_item_bg">

    <ImageView
        android:layout_width="@dimen/contact_avatar_height"
        android:padding="10dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="left|center"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:singleLine="true"
            android:maxLines="1"
            tools:text="equals"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorAccent"
            android:singleLine="true"
            android:maxLines="1"
            tools:text="You forgot your potato in my fridge. Please take it back"/>

    </LinearLayout>

</LinearLayout>