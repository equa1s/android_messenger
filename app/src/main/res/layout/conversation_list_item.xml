<?xml version="1.0" encoding="utf-8"?>
<com.messenger.ui.ConversationListItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contact_item_height"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/user_avatar"
        android:background="@color/colorAccent"
        android:layout_width="@dimen/contact_avatar_height"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/sign_up_button_selected"
        android:layout_toRightOf="@+id/user_avatar"
        android:layout_toEndOf="@+id/user_avatar"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/user_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLines="1"
            tools:text="@string/ConversationListItem__test_user_login"
            android:textAppearance="@style/Messenger.Light.UserLoginTitle" />

        <TextView
            android:id="@+id/user_last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLines="1"
            tools:text="@string/ConversationListItem__test_user_message"
            android:textAppearance="@style/Messenger.Light.UserLoginSubtitle" />

    </LinearLayout>

</com.messenger.ui.ConversationListItem>