    <!-- No action bar style for registration & intro activity -->
    <style name="Messenger.Light.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextBackground">@android:color/white</item>
        <item name="editTextColor">@android:color/white</item>
        <item name="dialog_alert_icon">@mipmap/ic_warning_black_36dp</item>
        <item name="dialog_info_icon">@mipmap/ic_error_black_36dp</item>
    </style>

    <style name="Messenger.Light.UserLoginTitle">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Messenger.Light.UserLoginSubtitle">
        <item name="android:textSize">17sp</item>
    </style>

</resources>
